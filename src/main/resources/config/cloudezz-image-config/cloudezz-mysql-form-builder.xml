<?xml version="1.0" encoding="UTF-8"?>

<img-settings>
	<form name="cloudezz/mysql">
		<form-element type="input" name="mysqlDB" display-name="Databases to be created" optional="false" />
		<form-element type="input" name="mysqlUserName"
			display-name="Mysql Username" optional="false" />
		<form-element type="input" name="mysqlPassword"
			display-name="Mysql Password" optional="false" />
		<form-element type="input" name="port" display-name="Mysql Port" optional="true" />
		<form-element type="password" name="ROOT_SSH_PASSWD"
			display-name="SSH Root Password" optional="false" />
		<form-element type="checkbox" name="WEB_SHELL"
			display-name="Shell Web Access" optional="true" />
	</form>
	<ports>
		<port name="mysql_port" display-name="Mysql Access" default-value="3306" />
	</ports>
</img-settings>

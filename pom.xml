				<version>3.1.1</version>
				<configuration>
					<outputChangeLogFile>src/main/resources/config/liquibase/db-changelog-new.xml</outputChangeLogFile>
					<changeLogFile>src/main/resources/config/liquibase/db-changelog.xml</changeLogFile>
					<propertyFile>src/main/resources/config/liquibase/liquibase.mysql.properties</propertyFile>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>status</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>mysql</groupId>
